<%- include('../inc/nav.ejs') %>
<title>Logikk's Dashboard - Viendo ticket</title>
&nbsp
<body>

  <div class="container mt-5">
    <!-- Ticket View -->
    <div class="ticket-view">
      <h2>Ticket View</h2>
      <% for (var i = 0; i < tickets.length; i++) { %>
        <% if (tickets[i].user_id === user.discord_id) { %>
          <div class="ticket user-response">
            <p><strong>User Response</strong></p>
            <p><strong>Timestamp:</strong> <%= tickets[i].timestamp %></p>
            <p><strong>Response:</strong> <%= tickets[i].response %></p>
          </div>
        <% } else { %>
          <div class="ticket staff-response">
            <p><strong>Staff Response</strong></p>
            <p><strong>Timestamp:</strong> <%= tickets[i].timestamp %></p>
            <p><strong>Response:</strong> <%= tickets[i].response %></p>
          </div>
        <% } %>
      <% } %>
    </div>

  </div>
</body>
