<script>
    let countdown = 5;
    const countdownEl = document.getElementById("countdown");
  
    setInterval(() => {
      countdown--;
      countdownEl.innerText = countdown;
    }, 1000);
  
    setTimeout(() => {
      window.location.href = "/support";
    }, 5000);
