        body {
            background-color: #1c1e22;
            color: white;
            font-family: sans-serif;
            margin: 0;
        }
        .container {
            display: flex;
            flex-direction: row;
            height: 100vh;
            width: 100vw;
        }
        .left {
            background-image: url('https://crujera.galnod.com/img/logikk.png');
            background-size: cover;
            background-position: center;
            flex: 1;
        }
        .right {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            background-color: #252525;
            border-left: 2px solid #444;
        }
        h1 {
            font-size: 36px;
            margin-top: 0;
        }
        h2 {
