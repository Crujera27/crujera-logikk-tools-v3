<!DOCTYPE html>
<html>
<%- include('../inc/nav.ejs') %>
<title>Logikk's Dashboard - Atención requerida</title>
&nbsp
<body>
  <div class="container mt-5">
    <h1>Advertencias pendientes de lectura</h1>
  
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>Nivel</th>
          <th>Razón</th>
          <th>Fecha</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < warns.length; i++) { %>
          <tr>
            <td><%= warns[i].id %></td>
            <td><%= warns[i].level %></td>
            <td><%= warns[i].reason %></td>
            <td><%= warns[i].timestamp %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  
    <div class="form-group mt-3">
      <input type="checkbox" name="accept" value="1" id="accept-checkbox">
      <label for="accept-checkbox">He releído y acepto las normas del Discord, Términos de Servicio y Política de privacidad</label>
    </div>
  
    <button type="button" class="btn btn-primary mt-3" id="continue-btn" disabled>Reactivar cuenta</button>
  
    <script>
      const acceptCheckbox = document.getElementById('accept-checkbox');
      const continueBtn = document.getElementById('continue-btn');
      
      acceptCheckbox.addEventListener('change', () => {
        continueBtn.disabled = !acceptCheckbox.checked;
      });
      
      continueBtn.addEventListener('click', () => {
        window.location.href = '/reactivar';
      });
    </script>
  </div>  
</body>
</html>
<style>
    body {
      background-color: #222;
      color: #fff;
      font-family: sans-serif;
    }
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #111;
      padding: 10px;
    }
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
    }
    h1 {
      font-size: 3rem;
      margin-bottom: 0;
    }
    h2 {
      font-size: 2rem;
      margin-top: 0;
      opacity: 0.8;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      text-align: left;
      padding: 8px;
      border-bottom: 1px solid #ddd;
    }
    tr:hover {
      background-color: #444;
    }
    th {
      background-color: #111;
      color: #fff;
    }
    .button {
      display: inline-block;
      background-color: #fff;
      color: #333;
      border: 1px solid #333;
      padding: 8px 16px;
      text-decoration: none;
      border-radius: 4px;
