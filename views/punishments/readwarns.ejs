<!DOCTYPE html>
<html>
<%- include('../inc/nav.ejs') %>
<title>Logikk's Dashboard - Atención requerida</title>
&nbsp
<body>
  <div class="container mt-5">
    <h1>Advertencias pendientes de lectura</h1>
  
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nivel</th>
          <th scope="col">Razón</th>
          <th scope="col">Fecha</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < warns.length; i++) { %>
          <tr>
            <td><%= warns[i].id %></td>
            <td><%= warns[i].level %></td>
            <td><%= warns[i].reason %></td>
            <td><%= warns[i].timestamp %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  
    <div class="form-group mt-3">
      <input type="checkbox" name="accept" value="1" id="accept-checkbox">
      <label for="accept-checkbox">He releído y acepto las normas del Discord, Términos de Servicio y Política de privacidad</label>
    </div>
  
    <button type="button" class="btn btn-primary mt-3" id="continue-btn" disabled>Reactivar cuenta</button>
  
    <script>
      const acceptCheckbox = document.getElementById('accept-checkbox');
      const continueBtn = document.getElementById('continue-btn');
      
      acceptCheckbox.addEventListener('change', () => {
        continueBtn.disabled = !acceptCheckbox.checked;
      });
      
      continueBtn.addEventListener('click', () => {
        window.location.href = '/reactivar';
      });
    </script>
  </div>  
</body>
</html>
<style>
    body {
      background-color: #333;
      color: #fff;
      font-family: sans-serif;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #222;
      border-radius: 10px;
    }

    h1 {
      font-size: 3rem;
      margin-bottom: 0;
    }

    h2 {
      font-size: 2rem;
      margin-top: 0;
      opacity: 0.8;
      color: #ff4444;
      text-align: center;
      margin-bottom: 30px;
    }

    th,
    td {
      color: #fff;
      border-color: #444;
    }

    .table-striped tbody tr:nth-of-type(odd) {
      background-color: #444;
    }

    .table-striped tbody tr:hover {
      background-color: #666;
    }

    th {
      background-color: #111;
    }

    .btn-primary {
      background-color: #ff4444;
      border-color: #ff4444;
    }

    .btn-primary:hover {
      background-color: #cc0000;
      border-color: #cc0000;
    }
</style>
