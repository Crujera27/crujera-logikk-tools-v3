            <table class="table table-striped">
              <thead class="thead-dark">
                <tr>
                  <th scope="col">Trabajo</th>
                  <th scope="col">Descripción</th>
                  <th scope="col">Plazas</th>
                  <th scope="col">Tipo</th>
                  <th scope="col">Aplicar</th>
                </tr>
              </thead>
              <tbody>
                <!--<tr>
                  <td>Desarrollador Web</td>
                  <td>Creación y mantenimiento de sitios web.</td>
                  <td>2</td>
                  <td>Remunerado</td>
                  <td><a href="/apply/1" class="btn btn-primary">Aplicar</a></td>
                </tr>
                -->
                <tr>
                  <td>Moderador de Discord</td>
                  <td>Atender tickets, batallar por un buen ambiente e imponer la normativa del Discord.</td>
                  <td>0</td>
                  <td>Voluntario</td>
                  <td><a href="?error=notavailable" class="btn btn-primary">Aplicar</a></td>
                </tr>
